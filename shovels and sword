#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
#define f(i,a,b) for(ll i=a;i<b;i++)
int main(){
    ll t;
    cin >> t;
    f(i,0,t){
        ll a,b;
        cin >> a >> b;
        ll x=max(a,b);
        ll y=min(a,b);
        if(((x+y)%3==0 && x<=2*y) || ((x+y)%3==1 && (x-1)<=2*y) || ((x+y)%3==2 &&(x-2)<=2*y)){
            cout << (x+y)/3 << "\n";
            
            
        }
        else{
            cout << y << "\n";
        }
        
            
        
    }
}
