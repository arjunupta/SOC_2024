#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define f(i,a   ,b) for(ll i=a;i<b;i++)
int main(){
    ios::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    double x,y,z;
