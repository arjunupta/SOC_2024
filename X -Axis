#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define f(i,a,b) for(ll i=a;i<b;i++)
int main(){
    ios::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    ll t;cin >> t;
    while(t--){
        vector<ll> a(3);
        f(i,0,3) cin >> a[i];
        sort(a.begin(),a.end());
        cout << a[2]-a[0] << '\n';
    }
}
