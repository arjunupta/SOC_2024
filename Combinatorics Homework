#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define f(i,a   ,b) for(ll i=a;i<b;i++)
int main(){
    ios::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    ll t;cin >> t;
    while(t--){
        ll a,b,c,m;cin >> a >> b >> c >> m;
        ll x=max(a,b);
        x=max(x,c);
        if(m<=(a+b+c-3) && m>=(2*x-a-b-c-1)) cout << "YES" << '\n';
        else cout << "NO" << '\n';
    }
    
}
