#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
int main(){
    ll t;
    cin >> t;
    vector<ll> n(t),k(t);
    for(ll i=0;i<t;i++){
        cin >> n[i] >> k[i];
    }
    for(ll i=0;i<t;i++){
        if(n[i]>=k[i]*k[i]){
            if(n[i]%2==k[i]%2){
                cout << "YES" << "\n";
            }
            else{
                cout << "NO" << "\n";
            }
            
        }
        else{
            cout << "NO" << "\n";
        }
    }
}
    

        
    
