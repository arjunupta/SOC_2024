#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
#define f(i,a,b) for(ll i=a;i<b;i++)
int main(){
    ios::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    ll t;cin >> t;
    while(t--){
        ll n,a,b;
        cin >> n >> a >> b;
        string s;
        cin >> s;
        ll m=unique(s.begin(),s.end())-s.begin();
        cout << a*n+max(b*n,(m/2+1)*b) << '\n';
    }




}
