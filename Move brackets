    #include<bits/stdc++.h>
    using namespace std;
    typedef long long ll;
    #define f(i,a,b) for(ll i=a;i<b;i++)
    int main(){
        ios::sync_with_stdio(0);
        cin.tie(0);
        cout.tie(0);
        ll t,n;cin >> t;
        string s;
        while(t--){
            ll x=0,y=0,i=0;
            cin >> n >> s;
            while(i<s.length()){
                if(s[i]=='(') x++;
                else x--;
                if(x<0){
                    y++;x++;
                }
                i++;
                
            }
            cout << y << '\n';
            
        }
    
    }
